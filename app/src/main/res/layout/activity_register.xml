<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">

    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.cardview.widget.CardView
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <EditText
            android:textAlignment="center"
            android:background="#fff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name"
            android:id="@+id/r_NameEt"
            android:padding="15dp"
            />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <EditText
            android:textAlignment="center"
            android:background="#fff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:id="@+id/r_EmailEt"
            android:padding="15dp"
            />
        </androidx.cardview.widget.CardView>
         <androidx.cardview.widget.CardView
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp"
             android:layout_marginLeft="20dp"
             android:layout_marginRight="20dp"
             android:layout_marginBottom="12dp"
             android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <EditText
            android:textAlignment="center"
            android:background="#fff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Phone"
            android:inputType="number"
            android:id="@+id/r_PhoneEt"
            android:padding="15dp"
            />
        </androidx.cardview.widget.CardView>
         <androidx.cardview.widget.CardView
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp"
             android:layout_marginLeft="20dp"
             android:layout_marginRight="20dp"
             android:layout_marginBottom="12dp"
             android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <EditText
            android:textAlignment="center"
            android:background="#fff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:inputType="textPassword"
            android:id="@+id/r_PasswordEt"
            android:padding="15dp"
            />
        </androidx.cardview.widget.CardView>

     <androidx.cardview.widget.CardView
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp"
             android:layout_marginLeft="20dp"
             android:layout_marginRight="20dp"
             android:layout_marginBottom="12dp"
             android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <EditText
            android:textAlignment="center"
            android:background="#fff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Refer Id(1234)"
            android:id="@+id/r_ReferEt"
            android:padding="15dp"
            />
        </androidx.cardview.widget.CardView>




        <Button
            android:minWidth="120dp"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#fff"
            android:background="@drawable/button_bg3"
            android:layout_marginRight="25dp"
            android:layout_marginLeft="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:text="Signup"
            android:layout_marginTop="15dp"
            android:id="@+id/r_RegisterButton"

            />
        <TextView
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
             android:text="Already Have An Account? Login"
            android:layout_marginTop="15dp"
            android:id="@+id/r_LoginButton"
            android:textAlignment="center"

            />

    </LinearLayout>


</RelativeLayout>